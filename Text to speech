#Import the libraries
from newspaper import Article
import nltk
from gtts import gTTS
import os

#now get the article

article = Article('https://hackernoon.com/future-of-python-language-bright-or-dull-uv41u3xwx')

article.download()
article.parse()

nltk.download('punkt')
article.nlp()

# define variable to store article
#Get the articles text
mytext = article.text

language = 'en' #English

myobj = gTTS(text=mytext, lang=language, slow=False) #false to read at high speed

myobj.save("read_article.mp3")

os.system("start read_article.mp3")
